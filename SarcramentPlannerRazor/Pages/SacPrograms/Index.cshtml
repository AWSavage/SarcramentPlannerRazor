</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SacProgram[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SacProgram[0].Conducting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SacProgram[0].OpeningHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SacProgram[0].OpeningPrayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SacProgram[0].SacramentHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SacProgram[0].IntermediateHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SacProgram[0].ClosingHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SacProgram[0].ClosingPrayer)
            </th>
            <th></th>
        </tr>
